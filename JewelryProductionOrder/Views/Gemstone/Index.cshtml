@model List<Gemstone>

<div class="card-block shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Gemstone List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Gemstone" asp-action="Create" class="btn btn-primary">
                    Create New Gemstone
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Weight</th>
                    <th>Carat</th>
                    <th>Clarity</th>
                    <th>Color</th>
                    <th>Cut</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderByDescending(u => u.Name))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Price</td>
                        <td>@obj.Weight</td>
                        <td>@obj.Carat</td>
                        <td>@obj.Clarity</td>
                        <td>@obj.Color</td>
                        <td>@obj.Cut</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Gemstone" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                                    Edit
                                </a>
                            </div>
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">

                                <a asp-controller="Gemstone" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>