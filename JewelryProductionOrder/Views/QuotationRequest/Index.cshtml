@model List<QuotationRequest>
<form method="post">
    <div>
        <div>
            <h2>View Quotation Application</h2>
            <hr />
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>CreatedAt</th>
                    <th>Labor Price</th>
                    <th>Total Price</th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.CreatedAt)) 
                @*sắp xếp object theo ngày tạo*@
                {
                <tr>
                    <td>@obj.Id</td>
                    <td>@obj.Name</td>
                    <td>@obj.Status</td>
                    <td>@obj.CreatedAt</td>
                    <td>@obj.LaborPrice</td>
                    <td>@obj.TotalPrice</td>
                    
                    <td><div class="w-75 btn-group" role="group">
                        <a asp-controller="Quotation" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil"></i> Edit
                        </a>
                            <a asp-controller="Quotation" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                    </div></td>
                </tr>
                }
              
            </tbody>
        </table>
    </div>

    <div class="col-6 col-md-3">
        <a asp-controller="ProductionRequest" asp-action="Index" class="btn btn-outline-primary form-control">
            Back 
        </a>
    </div>

    <!-- <div asp-validation-summary="All"></div> -->
</form>