@{
    ViewData["Title"] = "Design";
}
@model List<JewelryDesign>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


<body>
    @foreach (var design in Model)
    {
    <div class="col-lg-3 col-sm-6">
        <div class="row p-2">
            <div class="col-12 p-1">
                <div class="card border-0 p-3 shadow  border-top border-5 rounded">
                    @if (design.Image is not null)
                    {
                        <img src="@design.Image" class="card-img-top rounded" />
                    }
                    else
                    {
                        <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                    }

                    <div class="card-body pb-0">
                        <div class="pl-1">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@design.Name</p>
                        </div>

                    </div>
                    <div>
                        <a asp-action="Details"
                           asp-route-designId="@design.Id"
                           class="btn btn-primary bg-gradient border-0 form-control">
                            Order
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }

    <script src="~/js/site.js"></script>
</body>
</html>