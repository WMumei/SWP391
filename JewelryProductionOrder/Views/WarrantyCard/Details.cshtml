@model WarrantyCardVM


<form method="post" class="container">
	<div class="caption-top row">
		@*<input asp-for="Jewelry.Id" hidden/>*@
		<h2>Warranty Card for Jewelry: @Model.Jewelry.Name</h2>
	</div>
	<div class="col-12 py-2 form-floating">
		<div class="row">
			<div class="col-10">
				<input asp-for="@Model.Jewelry.Id"  hidden/>
				<input disabled asp-for="@Model.Jewelry.CustomerId"  />
		    </div>
			<div class="col-10">
				<input asp-for="@Model.Jewelry.Id" hidden />
				<input disabled asp-for="@Model.Jewelry.CustomerId" hidden />
			</div>
			<div class="col-12 py-2 form-floating">
				<input disabled asp-for="@Model.WarrantyCard.CreatedAt" class="form-control border-0 shadow" />
				<label asp-for="@Model.WarrantyCard.CreatedAt" class="ms-2"></label>
			</div>
			<div class="col-12 py-2 form-floating">
				<input disabled asp-for="@Model.WarrantyCard.ExpiredAt" class="form-control border-0 shadow" />
				<label asp-for="@Model.WarrantyCard.ExpiredAt" class="ms-2"></label>
			</div>
</div>
</div>
</form>