@model ShoppingCartVM

<form method="post">
	<br />
	<div class="container">
		<div class="card shadow border-0">

			<div class="card-header bg-primary bg-gradient text-light ml-0 py-3">
				<div class="row px-4">
					<div class="col-6">
						<h5 class="pt-2 text-white">
							Order Summary
						</h5>
					</div>
					<div class="col-6 text-end">
						<a asp-action="Index" class="btn btn-danger btn-sm">Back to Cart</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-primary">Shipping Details:</span>
								</h4>
							</div>
							<div class="row my-1">
								<div class="col-4">
									<label>Contact Person Name</label>
								</div>
								<div class="col-8">
									<input asp-for="ProductionRequest.ContactName" class="form-control" />
									<span asp-validation-for="ProductionRequest.ContactName" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-4">
									<label>Phone</label>
								</div>
								<div class="col-8">
									<input asp-for="ProductionRequest.PhoneNumber" class="form-control" />
									<span asp-validation-for="ProductionRequest.PhoneNumber" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-4">
									<label>Email</label>
								</div>
								<div class="col-8">
									<input asp-for="ProductionRequest.Email" class="form-control" />
									<span asp-validation-for="ProductionRequest.Email" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-4">
									<label>Address</label>
								</div>
								<div class="col-8">
									<input asp-for="ProductionRequest.Address" class="form-control" />
									<span asp-validation-for="ProductionRequest.Address" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-4">
									<label>Notes for design (if any):</label>
								</div>
								<div class="col-8">
									<input asp-for="ProductionRequest.Note" class="form-control" />
									<span asp-validation-for="ProductionRequest.Note" class="text-danger"></span>
								</div>
							</div>

						</div>
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-primary">Order Summary:</span>
							</h4>
							<ul class="list-group mb-3">
								@foreach (var details in Model.ShoppingCartList)
								{
									<li class="list-group-item d-flex justify-content-between">
										<div>
											<h6 class="my-0">@details.BaseDesign.Name</h6>
											<small class="text-muted">Quantity: @details.Quantity</small>
										</div>
									</li>
								}

								<li class="list-group-item d-flex justify-content-between bg-light">
									<small class="text-primary">Total (USD)</small>
									<strong class="text-primary">Please wait for Quotation</strong>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					<div class="col-12 col-md-3">
						<button type="submit" value="Place Order" class="btn btn-primary form-control">Place Order</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
