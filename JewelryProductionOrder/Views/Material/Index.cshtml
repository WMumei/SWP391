@model List<Material>

<div class="container">
	<div class="caption-top row d-flex justify-content-between">
		<h2 class="col-10">Material Management </h2>

		<div class="col-2 d-flex justify-content-end">
			<a class="btn btn-primary btn-lg px-4" asp-controller="Material" asp-action="Create" asp-route-mId="">Create</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Price</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model)
			{
				<tr>
					<td>@obj.Id</td>
					<td>@obj.Name</td>
					<td>@obj.Price</td>
					<td><a asp-controller="Material" asp-action="Edit" asp-route-mId="@obj.Id" class="btn btn-primary btn-sm">Edit</a></td>
					<td><a asp-controller="Material" asp-action="Delete" asp-route-mId="@obj.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this material?')">Delete</a></td>
				</tr>
				
			}
		</tbody>
	</table>
</div>
